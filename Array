Array as a function "Pass by reference method"
-----------------------------------------------------------------------------------
//Linear search
bool linearsearch(int arr[], int size, int key)
{
   for(int i=0;i<size;i++)
   {
   if(arr[size]==key)
   return true;
   }
return false;
}

int main()
{
int arr[]={1,2,3,4,5,6,7,8},size=8;
int key;
cout>>key;
if(linearsearch(arr,size,key))
cout<<"Found";
else
cout<<"Not found";
}

